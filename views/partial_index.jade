div.container
  div.section(ng-repeat='area in areas')
    h5 {{area.name}}
    div.row
      div.col.s12.m4
        p(ng-repeat="device in getDevices(area)")
          input.filled-in(id='dvc{{$index}}', type='checkbox', ng-model='device.state' ng-change='change(device)')
          label(for='dvc{{$index}}') {{ device.name }}    
  div.section
    div.row
      div.col.s12.m4
        button.waves-effect.waves-light.btn(ng-click='refresh()') Refresh
    div.row
      div.col.s12.m4
        small RETORNO: {{ retorno }}    
